<form method="post" action="/products/{{ product._id }}?_method=PUT">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="{{ product.name }}" />
    </div>
    <div>
        <label>Categories</label>
        <label>
            Pants
            <input type="checkbox" name="categories" value="Pants" />
        </label>
        <label>
            Shorts
            <input type="checkbox" name="categories" value="Shorts" />
        </label>
        <label>
            Swimwear
            <input type="checkbox" name="categories" value="Swimwear" />
        </label>
    </div>
    <div>
        <label>Price</label>
        <input type="number" name="price" value="{{ product.price }}" />
    </div>
    <div>
        <input type="submit" value="edit product" />
    </div>
</form>